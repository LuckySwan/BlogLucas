@model BlogLucas.Models.Post
@{
    ViewBag.Title = "NewPost";
}

<h2>NewPost</h2>


@{using (Html.BeginForm("Save", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(p => p.Title)
            @Html.TextBoxFor(p => p.Title, new { @class = "form-contrl" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Body)
            @Html.TextAreaFor(p => p.Body, new { @class = "form-contrl" })
        </div>
        @Html.HiddenFor(p => p.Id)
        <div class="form-group">
            <input type="submit" id="btnSave" value="Save" onclick="sendData()" class="btn btn-primary" />
        </div>
    }

}
