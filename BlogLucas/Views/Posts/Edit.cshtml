@model BlogLucas.Models.Post
@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm ("Save", "Posts", FormMethod.Post,new { enctype = "multipart/form-data"}))
{
   <div class="form-group">
       @Html.LabelFor(p => p.Title)
       @Html.TextBoxFor(p => p.Title, new { @class ="form-control col-lg-12 col-md-12 col-sm-12" })
   </div>
   <div class="form-group">
       @Html.LabelFor(p => p.Body)
       @Html.TextAreaFor(p => p.Body, new { @class ="form-control col-lg-12 col-md-12 col-sm-12" })
   </div>
   @Html.HiddenFor(p => p.Id)
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}